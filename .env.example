# Google OAuth (optional if using magic link auth)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Magic Link Authentication
MAGIC_LINK_ENABLED=true
MAGIC_LINK_SECRET=your-32-character-minimum-secret-key-here-make-it-long
MAGIC_LINK_TTL_MINUTES=30
MAGIC_LINK_RATE_LIMIT=5

# SMTP Configuration (required if MAGIC_LINK_ENABLED=true)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@yourapp.com
SMTP_FROM_NAME=YourApp

# App Configuration
APP_BASE_URL=http://localhost:8080
DATABASE_URL=postgres://user:password@localhost:5432/myapp?sslmode=disable

# Session Configuration
SESSION_COOKIE_NAME=myapp_session
SESSION_COOKIE_DOMAIN=
SESSION_TTL_HOURS=720
SESSION_MAX_TTL_HOURS=4380
SESSION_SECURE_COOKIES=false

# Route Configuration
LOGIN_PATH=/login
AFTER_LOGIN_PATH=/
AFTER_LOGOUT_PATH=/login

# Proxy Configuration
TRUST_PROXY_HEADERS=false
